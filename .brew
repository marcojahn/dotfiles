#!/usr/bin/env bash

# Make sure we’re using the latest Homebrew
# if it fails: cd /usr/local && git pull
brew update

# Upgrade any already-installed formulae
brew upgrade

# Install GNU core utilities (those that come with OS X are outdated)
brew install coreutils
echo "Don’t forget to add $(brew --prefix coreutils)/libexec/gnubin to \$PATH."
brew install ngrep

brew tap homebrew/dupes
brew install apple-gcc42

#install bash v4
# http://stackoverflow.com/questions/10574969/how-do-i-install-bash-3-2-25-on-mac-os-x-10-5-8
brew install bash
brew install bash-completion

# node js
# Using nodejs through nvm
# http://dreamerslab.com/blog/en/how-to-setup-a-node-js-development-environment-on-mac-osx-lion/
#brew install node

# install usefull binaries
# change /etc/paths
# /usr/local/bin must be before /usr/bin
# https://gist.github.com/Overbryd/1669348
brew install git
brew install mercurial

#OFF#brew install rename
brew install tree
brew install webkit2png

brew install pigz
brew install zopfli

#OFF#brew tap homebrew/versions